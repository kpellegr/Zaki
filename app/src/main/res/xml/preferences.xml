<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <PreferenceCategory
        app:key="solver_category"
        app:title="Solving">

        <SeekBarPreference
            android:max="300"
            android:defaultValue="60"
            app:showSeekBarValue="true"
            android:key="calculation_duration_preference"
            android:title="@string/calculation_duration_preference_label"/>

        <SwitchPreference
            android:defaultValue="true"
            android:key="solution_render_latex_preference"
            android:title="@string/solution_render_latex_preference_label" />


    </PreferenceCategory>

    <PreferenceCategory
        app:key="music_category"
        app:title="Music">

        <SwitchPreference
            android:defaultValue="false"
            android:key="play_music_preference"
            android:title="@string/play_music_preference_label" />

        <DropDownPreference
            android:key="song_selection_preference"
            android:title="@string/song_selection_preference_label"
            app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>

</PreferenceScreen>